{
  "name": "diffmasterflex",
  "version": "1.0.4",
  "description": "Get a list of files that differ between the specified commit and Git ref",
  "license": "MIT",
  "author": "Daniel Sieradski <daniel@self.agency>",
  "repository": {
    "type": "git",
    "url": "https://github.com/selfagency/slackfeedbot.git"
  },
  "type": "module",
  "main": "dist/action.js",
  "scripts": {
    "build": "tsup src/action.ts --format cjs --out-dir dist",
    "format": "oxfmt --write",
    "lint": "tsc --noEmit && oxlint",
    "lint-staged": "lint-staged --allow-empty",
    "lint:fix": "oxlint --fix",
    "prepare": "husky install",
    "start": "node dist/action.cjs",
    "test": "vitest --run",
    "tsc:check": "tsc --noEmit"
  },
  "dependencies": {
    "@actions/core": "3.0.0",
    "@actions/exec": "3.0.0",
    "dayjs": "^1.11.19",
    "html-to-text": "9.0.5",
    "linkedom": "^0.18.12",
    "node-fetch": "^3.3.2",
    "object-sha": "^2.1.1",
    "rss-to-json": "^2.1.1",
    "showdown": "^2.1.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@types/html-to-text": "9.0.4",
    "@types/node": "25.3.0",
    "@types/showdown": "^2.0.6",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxlint-tsgolint": "^0.14.2",
    "tsup": "^8.5.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts}": [
      "pnpm tsc:check --types node --esModuleInterop --target esnext --module nodenext"
    ],
    "*.{ts,js,json,md,yml}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  }
}
